<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/empty"></solid>
            <stroke android:width="3dp" android:color="@color/deep"></stroke>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/empty"></solid>
            <stroke android:width="3dp" android:color="@color/deep"></stroke>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/empty"></solid>
            <stroke android:width="3dp" android:color="@color/shallow"></stroke>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>
</selector>